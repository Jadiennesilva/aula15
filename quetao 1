#include <stdio.h>
#include <stdlib.h>
#include <locale.h>

int main() {
	
	setlocale(LC_ALL, "Portuguese_Brazil");

   float N1,N2,mult;
   
   int N3 = 1;
   
   while (N3 == 1){
   printf("Multiplicação de dois numereos: \n");
    
    
    printf("digite o primeiro numero: \n");
    scanf("%f",&N1);
    
    printf("digite o segundo numero: \n");
    scanf("%f",&N2);
    
    mult = N1 * N2;
    
    printf("valor: %f \n ", mult);
    
    printf("digite 0 ou 1\n");
    scanf("%d", &N3);
     	
   }
   
   
 
    
     
  system("pause");
   
    return 0;
}
